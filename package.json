{
  "scripts": {
    "check:lint": "eslint .",
    "check:format": "prettier --check *",
    "check:types": "tsc --noEmit",
    "test": "jest",
    "develop": "nodemon",
    "build": "npm-run-all --serial build:*",
    "build:bundle": "esbuild --bundle --minify --outfile=dist/handler.ts --platform=node --sourcemap --define:process.env.NODE_ENV=production --tree-shaking=true src/handler.ts",
    "build:package": "mkdir -p out && zip -d -j out/function.zip dist/handler.ts dist/handler.ts.map"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node --transpile-only -r tsconfig-paths/register src/main.ts",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.88",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8.2.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "aws-cdk": "^2.3.0",
    "aws-cdk-lib": "^2.3.0",
    "esbuild": "^0.14.8",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@vendia/serverless-express": "^4.5.2",
    "cors": "^2.8.5",
    "express": "^5.0.0-alpha.8"
  }
}
